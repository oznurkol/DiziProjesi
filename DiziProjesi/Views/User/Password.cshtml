@{
    ViewBag.Title = "Şifre Değiştirme";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
            {
            <div class="form-horizontal">
                <h4>Kullanıcı İşlemi</h4>
                <hr />
                @Html.ValidationSummary(false)
                <div class="form-group">
                    @Html.Label("Eski Şifre", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.Editor("old", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Yeni Şifre", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.Editor("newpw", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Helpers.Button("success", "success", string.Empty, "submit", "plus", " Ekle")
                    </div>
                </div>
            </div>
        }
    </div>

</div>
