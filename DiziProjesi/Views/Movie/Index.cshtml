@model IEnumerable<DiziProjesi.Models.Entity.Movie>
@{
    ViewBag.Title = "Diziler";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>
            @Helpers.LinkButton("/Movie/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IMDB_Point)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cons_Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ins_Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Up_Time)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IMDB_Point)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cons_Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ins_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Up_Time)
                    </td>
                    <td>
                        @Helpers.LinkButton("/Movie/Edit/" + item.ID, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Helpers.LinkButton("/Movie/Delete/" + item.ID, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                        @Helpers.LinkButton("/Season/Create/" + item.ID, "danger", "btn-xs", "Sezon", "plus", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>