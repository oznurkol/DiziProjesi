@model IEnumerable<DiziProjesi.Models.Entity.MovieChapter>
@{
    ViewBag.Title = "Dizi Bölümleri";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ChapterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season.SeasonName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season.Movie.Movie_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ins_Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Up_Time)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChapterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season.SeasonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season.Movie.Movie_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ins_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Up_Time)
                    </td>
                    <td>
                        @Helpers.LinkButton("/Chapter/Edit/" + item.ID, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Helpers.LinkButton("/Chapter/Delete/" + item.ID, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>