@model DiziProjesi.Models.Entity.MovieChapter
@{
    ViewBag.Title = "Bölüm Ekle";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
            {
            <div class="form-horizontal">
                <h4>Dizi adı: @Html.DisplayFor(model => model.Season.Movie.Movie_Name)</h4>
                <h4>Sezon adı: @Html.DisplayFor(model => model.Season.SeasonName)</h4>
                <hr />
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Season.ID)
                <div class="form-group">
                    @Html.LabelFor(model => model.ChapterName, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ChapterName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PlayerLink, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PlayerLink, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Helpers.Button("success", "success", string.Empty, "submit", "plus", " Ekle")
                    </div>
                </div>
            </div>
        }
    </div>

</div>
