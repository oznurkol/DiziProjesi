@model IEnumerable<DiziProjesi.Models.Entity.MovieSeason>
@{
    ViewBag.Title = "Sezonlar";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie.Movie_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeasonName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ins_Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Up_Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Chapters)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.Movie_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeasonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ins_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Up_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chapters.Count)
                    </td>
                    <td>
                        @Helpers.LinkButton("/Season/Edit/" + item.ID, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Helpers.LinkButton("/Season/Delete/" + item.ID, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                        @Helpers.LinkButton("/Chapter/Create/" + item.ID, "danger", "btn-xs", "Kaldır", "plus", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>